# a) Create vector x
x <- 10:20

# b) Add 2
y <- x + 2

# c) Multiply y by 3
z <- y * 3

# d) Subtract 6 from z and divide by 3
answer <- (z - 6) / 3

# e) Print the answer
print(answer)

# f) All in one line:
answer2 <- ((x + 2) * 3 - 6) / 3
print(answer2)

# h(i) Sequence from 1 to 12 with increment of 0.5
vec1 <- seq(from = 1, to = 12, by = 0.5)
print("Sequence (1 to 12 by 0.5):")
print(vec1)

# h(ii) Cubes from 1^3 to 10^3
vec2 <- (1:10)^3
print("Cubes from 1^3 to 10^3:")
print(vec2)

# i)Sample vector
vec <- c(1, 5, 3, 5, 7, 5, 9)

# Count how many times 5 appears in the vector
count_5 <- sum(vec == 5)
print("Count of 5 in the vector:")
print(count_5)


# k) Create a specific mirrored sequence vector (1 to 20, then 19 to 1)
vec_k <- c(1:20, 19:1)
print("Mirrored vector (1 to 20 and back to 1):")
print(vec_k)

# m) Check which sentences contain the word 'data' using grepl() 
quotes <- c("Data is the new oil", 
            "Big data means big responsibility", 
            "Clean data is gold")

# Use grepl to check which strings contain the word "data" (case insensitive)
result <- grepl("data", quotes, ignore.case = TRUE)
print("Sentences containing the word 'data':")
print(result)
